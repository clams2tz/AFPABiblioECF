<div class="container register-container">
  <div class="custom-progress-bar">
    <div class="step active">
      <p>Name</p>
      <div class="bullet"><span>1</span></div>
      <div class="check fa-solid fa-check"></div>
    </div>
    <div class="step">
      <p>Contact</p>
      <div class="bullet"><span>2</span></div>
      <div class="check fa-solid fa-check"></div>
    </div>
    <div class="step">
      <p>Birth</p>
      <div class="bullet"><span>3</span></div>
      <div class="check fa-solid fa-check"></div>
    </div>
    <div class="step">
      <p>Submit</p>
      <div class="bullet"><span>4</span></div>
      <div class="check fa-solid fa-check"></div>
    </div>
  </div>

  <div class="form-outer">
    <form method="post">
      <div class="page slide-page active">
        <div class="title">Basic Info:</div>
        <div class="form-group">
          {{ form_label(form.firstName) }}
          {{ form_widget(form.firstName, { attr: { class: "form-control" } }) }}
        </div>
        <div class="form-group">
          {{ form_label(form.lastName) }}
          {{ form_widget(form.lastName, { attr: { class: "form-control" } }) }}
        </div>
        <div class="field">
          <button class="firstNext next btn">Next</button>
        </div>
      </div>
      <div class="page">
        <div class="title">Contact Info:</div>
        <div class="form-group">
          {{ form_label(form.email) }}
          {{ form_widget(form.email, { attr: { class: "form-control" } }) }}
        </div>
        <div class="form-group">
          {{ form_label(form.telephone) }}
          {{ form_widget(form.telephone, { attr: { class: "form-control" } }) }}
        </div>
        <div class="field btns">
          <button class="prev-1 prev btn">Previous</button>
          <button class="next-1 next btn">Next</button>
        </div>
      </div>
      <div class="page">
        <div class="title">Date of Birth:</div>
        <div class="form-group">
          {{ form_label(form.birthday) }}
          <div class="form-inline">
            {{
              form_widget(form.birthday, {
                attr: { class: "datepicker" }
              })
            }}
          </div>
        </div>
        <div class="form-group">
          {{ form_label(form.address) }}
          {{ form_widget(form.address, { attr: { class: "form-control" } }) }}
        </div>
        <div class="field btns">
          <button class="prev-2 prev btn">Previous</button>
          <button class="next-2 next btn">Next</button>
        </div>
      </div>
      <div class="page">
        <div class="title">Login Details:</div>
        <div class="form-group">
          {{ form_label(form.plainPassword) }}
          {{
            form_widget(form.plainPassword, { attr: { class: "form-control" } })
          }}
        </div>
        <div class="form-group">
          {{ form_label(form.subscriptionType) }}
          {{
            form_widget(form.subscriptionType, {
              attr: { class: "form-control" }
            })
          }}
        </div>
        <div class="form-group checkmark">
          {{ form_label(form.agreeTerms) }}
          {{ form_widget(form.agreeTerms) }}
        </div>
        <div class="field btns">
          <button class="prev-3 prev btn">Previous</button>
          <button type="submit" class="submit btn">Submit</button>
        </div>
      </div>
    </form>
  </div>
</div>

